<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel= "stylesheet" href= "{{ asset("assets/css/style.css") }}">
    {% block title %}
        <title>Library</title>
    {% endblock %}
</head>
<body class="js_body">
<header class="main-menu">
    <h1 class="main-title">LIBRAIRY</h1>
    <nav class="navbar">
        <ul class="menu-desktop">
            <li class= "btn-author">Bienvenue {{ app.user.email }}</li>
            <li>
                <a class="btn-author" href="{{ path("admin_authorsList") }}">Liste des auteurs</a>
            </li>
            <li>
                <a class="btn-book" href="{{ path("admin_booksList") }}">Liste des livres</a>
            </li>
            <li>
                <a class="btn-book" href="{{ path("app_logout") }}">Deconnexion</a>
            </li>
        </ul>
    </nav>
    <nav class="menu-mobile">
        <a class="btn-author" href="{{ path("admin_authorsList") }}">Liste des auteurs</a>
        <a class="btn-book" href="{{ path("admin_booksList") }}">Liste des livres</a>
        <a class="btn-book" href="{{ path("app_logout") }}">Deconnexion</a>
    </nav>
    <button type="button" aria-label="toggle curtain navigation" class="nav-toggler">
        <span class="line l1"></span>
        <span class="line l2"></span>
        <span class="line l3"></span>
    </button>
        {# button configuré en JS.
        Toujours ajouter une classe précédée de "js" => permet de cibler l'élément en JS ET de ne pas confondre avec classes CSS #}
        <button class="js_night_mode btn-night">Night Mode</button>
    </nav>
</header>

{% for message in app.flashes('success') %}
    <p class="mess-success">{{ message }}</p>
{% endfor %}
{% for message in app.flashes('error') %}
    <p class="mess-error">{{ message }}</p>
{% endfor %}

<main class="main-container">
    {% block main %}
    {% endblock %}

</main>

<footer>
    <p>footer de base !</p>
</footer>
<script src="{{ asset('assets/js/main.js') }}"></script>
</body>
</html>