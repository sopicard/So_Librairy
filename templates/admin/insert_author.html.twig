{% extends "base.html.twig" %}

{% block main %}

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'form-firstName-label'}}) }}
        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.firstName) }}
    </div>
    <div class="form-group">
        {{ form_label(form.lastName,'Nom', {'label_attr': {'class': 'form-lastName-label' }}) }}
        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.lastName) }}
    </div>
    <div class="form-group">
        {{ form_label(form.birthDate,'Date naissance', {'label_attr': {'class': 'form-birthDate-label' }}) }}
        {{ form_widget(form.birthDate, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.birthDate) }}
    </div>
    <div class="form-group">
        {{ form_label(form.deathDate,'Date décès', {'label_attr': {'class': 'form-deathDate-label' }}) }}
        {{ form_widget(form.deathDate, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.deathDate) }}
    </div>

    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}

    {{ form_end(form) }}

{% endblock %}